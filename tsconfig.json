{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "emitDeclarationOnly": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "noImplicitAny": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.jsx",
    "src/**/*.js",
    "scripts/**/*.js",
    "scripts/**/*.ts",
    "scripts/**/*.d.ts",
    "vit.config.ts", 
    "src/global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "src/libs"
  ]
}